<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.icesirun.Preguntas">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/fondopregunta">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_row="7"
            android:layout_column="5"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagenVidas"
                android:layout_row="1"
                android:layout_column="3"
                android:background="@drawable/tresvidas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="resultado"
                android:id="@+id/resultado"
                android:layout_row="2"
                android:layout_column="3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagenPreguntasCorrectas"
                android:layout_row="3"
                android:layout_column="3"
                android:background="@drawable/pgtacero" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="111dp"
                android:text="Aqui va la pregunta a mostrar"
                android:id="@+id/textoPregunta"
                android:layout_row="4"
                android:layout_column="3"
                android:singleLine="false"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="18dp" />
        </GridLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonOpcion1"
            android:layout_row="18"
            android:layout_column="5"
            android:background="@mipmap/opciona"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonOpcion2"
            android:layout_row="19"
            android:layout_column="5"
            android:background="@mipmap/opcionb"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonOpcion3"
            android:layout_row="20"
            android:layout_column="5"
            android:background="@mipmap/opcionc"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonOpcion4"
            android:layout_row="21"
            android:layout_column="5"
            android:background="@mipmap/opciond"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center" />
    </GridLayout>

</RelativeLayout>
