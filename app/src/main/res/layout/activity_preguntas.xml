<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.icesirun.Preguntas">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/fondopregunta">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_column="5"
            android:layout_row="7"
            >

            <TextView
                android:id="@+id/separador6"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_column="3"
                android:layout_row="0"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/imagenVidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1"
                android:background="@drawable/tresvidas" />

            <TextView
                android:id="@+id/separador6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="2"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/imagenPreguntasCorrectas"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="3" />

            <TextView
                android:id="@+id/textoPregunta"
                android:layout_width="fill_parent"
                android:layout_height="111dp"
                android:layout_column="3"
                android:layout_row="5"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:singleLine="false"
                android:text="Aqui va la pregunta a mostrar"
                android:textColor="@color/blanco"
                android:textSize="20dp"
                />
        </GridLayout>

        <TextView
            android:id="@+id/resultado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="14"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/segundos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="15"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/botonOpcion1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="18"
            android:background="@mipmap/opciona"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textColor="@color/blanco"
            />

        <TextView
            android:id="@+id/seprador1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="19"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/botonOpcion2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="20"
            android:background="@mipmap/opcionb"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textColor="@color/blanco"
            />

        <TextView
            android:id="@+id/seprador2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="21"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/botonOpcion3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="22"
            android:background="@mipmap/opcionc"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textColor="@color/blanco"
            />

        <TextView
            android:id="@+id/seprador3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="23"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/botonOpcion4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="24"
            android:background="@mipmap/opciond"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textColor="@color/blanco"
            />

        <TextView
            android:id="@+id/seprador4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="25"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </GridLayout>

</RelativeLayout>
